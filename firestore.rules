rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to access their own data under /usuarios/{uid}
    match /usuarios/{uid} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
      
      // Allow access to subcollections under the user's document
      match /{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == uid;
      }
    }
    
    // Business-scoped access (for future migration)
    match /businesses/{bid}/{document=**} {
      allow read, write: if request.auth != null
                         && request.auth.token.bid == bid;
    }
  }
} 